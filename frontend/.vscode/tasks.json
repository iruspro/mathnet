{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch-and-build",
      "type": "shell",
      "command": "cargo watch -s \"cargo build && wasm-pack build --release --target=web\"",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "serve",
      "type": "shell",
      "command": "basic-http-server . -a 127.0.0.1:4000",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "dev",
      "dependsOn": ["watch-and-build", "serve"],
      "dependsOrder": "parallel"
    }
  ]
}
